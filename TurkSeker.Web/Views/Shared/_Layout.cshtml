        <img src="~/img/seker_logo_dikdortgen.png" width="200" class="navbar-brand" alt="">





        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index">Ana Sayfa <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Fabrikalar
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @*@Html.Action("FabrikaMenu", "Tablo")*@

                    </div>
                </li>
                <li>
                    @*   @if (User.Identity.IsAuthenticated)
                        {
                            <span class="badge badge-info">@User.Identity.Name </span>
                            <a href="/Account/Logout" class="btn btn-danger">Logout</a>
                        }

                        else

                        {
                            @*<a href="/Account/Login" class="btn btn-success">Login</a>
                                <a href="/Account/Register" class="btn btn-primary">Register</a>


                                    } *@
                </li>

            </ul>

        </div>
    </nav>


    <hr />
    <div class="container">

        @if (IsSectionDefined("Fabrika"))
        {
            <div class="row">

                <div class="col-md-3">
                    @RenderSection("Fabrika", false)

                </div>
                <div class="col-md-9">

                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="row">

                    <div class="col-md-12">

                        @RenderBody()
                    </div>
                </div>
            </div>

        }


        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
